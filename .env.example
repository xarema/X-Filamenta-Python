# ------------------------------------------------------------------------------
# Flask Configuration
# ------------------------------------------------------------------------------
FLASK_APP=backend. src
FLASK_SECRET_KEY=change-me-run-python-c-import-secrets-print-secrets-token-hex
FLASK_DEBUG=False
FLASK_ENV=production

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
# Supported types: sqlite, mysql, postgresql
DB_TYPE=sqlite

# MySQL/PostgreSQL Configuration (comment out for SQLite)
# Uncomment and configure these if using MySQL or PostgreSQL: 
# DB_USER=filamenta
# DB_PASSWORD=secure-password-change-this
# DB_HOST=localhost
# DB_PORT=3306           # 3306 for MySQL, 5432 for PostgreSQL
# DB_NAME=filamenta

# ------------------------------------------------------------------------------
# Redis Cache (Optional but recommended for production)
# ------------------------------------------------------------------------------
# Leave empty to disable Redis (fallback to filesystem/memory cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ------------------------------------------------------------------------------
# Email Configuration (SMTP)
# ------------------------------------------------------------------------------
# Required for email verification and password reset features
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=noreply@example.com
SMTP_PASSWORD=smtp-password-change-this

# ------------------------------------------------------------------------------
# Deployment Settings
# ------------------------------------------------------------------------------
# Options: development, cpanel, vps, docker
DEPLOYMENT_TARGET=production

# URL scheme:  http or https (use https in production)
PREFERRED_URL_SCHEME=https

# ------------------------------------------------------------------------------
# Security
# ------------------------------------------------------------------------------
# Force HTTPS redirects (set to false for local development)
SECURE_SSL_REDIRECT=true

# Session cookie settings
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# ------------------------------------------------------------------------------
# SQLAlchemy
# ------------------------------------------------------------------------------
# Set to True ONLY for debugging SQL queries (verbose logs)
SQLALCHEMY_ECHO=False

# Connection pool settings (adjust for production load)
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_MAX_OVERFLOW=20
SQLALCHEMY_POOL_TIMEOUT=30

# ------------------------------------------------------------------------------
# Application Features
# ------------------------------------------------------------------------------
# Enable/disable features
ENABLE_REGISTRATION=true
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true

# Rate limiting (requests per time window)
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_API=100/hour

# ------------------------------------------------------------------------------
# Development/Debug (DO NOT USE IN PRODUCTION)
# ------------------------------------------------------------------------------
# Uncomment for local development only:
# FLASK_DEBUG=True
# FLASK_ENV=development
# SQLALCHEMY_ECHO=True
# SECURE_SSL_REDIRECT=false
# SESSION_COOKIE_SECURE=false